<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
    	<referenceContainer name="cart.discount">
            <block class="Ambab\CouponList\Block\Cart\CouponList" name="checkout.cart.coupon.list" as="coupon.list" template="Ambab_CouponList::cart/coupon_link.phtml" after="checkout.cart.coupon" ifconfig="couponlist/general/enabled"/>

            <block class="Ambab\CouponList\Block\Cart\CouponList" name="coupon.list.popup" template="Ambab_CouponList::cart/coupon_list.phtml" ifconfig="couponlist/general/enabled">
            	<arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                        	<item name="coupon-list" xsi:type="array">
                        		<item name="component" xsi:type="string">Ambab_CouponList/js/coupon</item>	
                        	</item>
                        </item>
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
